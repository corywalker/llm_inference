{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bazel-build-debug",
      "type": "shell",
      "command": "bazel build //:llm_inference -c dbg",
      "osx": {
        "command": "bazel build //:llm_inference -c dbg --apple_generate_dsym --spawn_strategy=local"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "C/C++: Build llama.cpp eval-callback",
      "type": "shell",
      "command": "cmake --build build_dbg --config Debug --target llama-eval-callback",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
      ],
      "options": {
        "cwd": "${workspaceFolder}/third_party/llama.cpp"
      },
    }
  ]
}