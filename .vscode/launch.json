{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug llm_inference",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-bin/llm_inference",
      "args": [
        "--model",
        "${config:modelPath}",
        "-p",
        "Hello",
        "-v",
        "-n",
        "100",
        "--no-cnv",
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
      "osx": {
        "MIMode": "lldb",
        "sourceFileMap": {
          // "${workspaceFolder}/bazel-llm_inference": "${workspaceFolder}"
          // This is updated to `bazel info execution_root`. Not sure how to automate it, but just update this occasionally when necessary.
          "/private/var/tmp/_bazel_corywalker/8ad1cd4b5e88c182c4eaa902c07cde58/execroot/_main": "${workspaceFolder}"
        }
      },
      "preLaunchTask": "bazel-build-debug"
    },
    {
      "name": "Debug llama.cpp",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/third_party/llama.cpp/build_dbg/bin/llama-eval-callback",
      "args": [
        "-m",
        "${config:modelPath}",
        "-p",
        "Hello",
        "-s",
        "123",
        "-v",
        "-n",
        "100",
        // llama-eval-callback does --no-cnv by default
        "--no-repack"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/third_party/llama.cpp",
      "environment": [],
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          },
          {
            "description": "Set Disassembly Flavor to Intel",
            "text": "-gdb-set disassembly-flavor intel",
            "ignoreFailures": true
          }
        ]
      },
      "osx": {
        "MIMode": "lldb"
      },
      "preLaunchTask": "C/C++: Build llama.cpp eval-callback"
    }
  ]
}